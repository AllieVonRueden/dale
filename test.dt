(import concepts-core)
(import concepts)

(using-namespace std.macros
(using-namespace std.concepts
  (def force+ (macro intern (concept type)
    (qq do
      (implement (uq concept) (uq type))
      (force (uq concept) (uq type)))))

;;this should enable to do this
(instantiate cm (force+ C T))
;;where cm is a context-macro, C is a concept, and T is a type, which does not have to implement the concept.
;;this could also be written istead of
(implement C T)
(instantiate cm T)
;;force is not required, the new form is shorter, and you don't have to specify force, if some other version is defined for this macro
))

